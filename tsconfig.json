{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components": ["./src/components/index.ts"],
      "@context": ["src/context/index.ts"],
      "@context/interfaces": ["./src/context/interfaces.ts"],
      "@customHooks": ["./src/hooks/index.ts"],
      "@pages/*": ["./src/pages/*"],
      "@auth/components": ["./src/pages/auth/components/*"],
      "@chat/components": ["./src/pages/chat/components/index.ts"],
      "@api/axios": ["./src/services/api/axios.ts"],
      "@api/routes": ["./src/services/api/routes.ts"],
      "@socket": ["./src/services/socket/socket.ts"],
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
